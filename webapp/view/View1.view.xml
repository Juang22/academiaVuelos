<mvc:View controllerName="academia.vuelos.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar">
    <Page id="page" title="{i18n>title}">
        <content>
						<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange"  showRestoreOnFB="true"  reset="onHandleReset" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="IdVuelo" label="Id Vuelo" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<Input
											name="IdVuelo"
											change="onChangeInput"
										/>
											
										
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="EstadoVuelo" label="Estado" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<ComboBox
											name="EstadoVuelo"
											selectionChange=".onSelectionChange"
										>
											<core:Item key="{key}" text="{name}"/>
										</ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Aerolinea" label="Aerolinea" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<ComboBox
											name="Aerolinea"
                                            id="idAerolinea"
											selectionChange=".onSelectionAerolinea"
                                            items="{oModelAerolineas>/}"
										>
											<core:Item key="{oModelAerolineas>aerolinea}" text="{oModelAerolineas>aerolinea}"/>
										</ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</content>




        <Table id="idProductsTable"
		inset="false"
		items="{
			path: 'aModelVuelos>/'
		}">
		
		
		<columns>
			<Column
				width="12em">
				<Text text="ID Vuelo" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Fecha" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Aerolinea" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Destino" />
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Salida" />
			</Column>
            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Estado" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Acciones" />
			</Column>
			
		</columns>
		<items>
			<ColumnListItem vAlign="Middle" type="Navigation" press="onHandleNav">
				<cells>
					<ObjectIdentifier
						title="{aModelVuelos>IdVuelo}"
						/>
                    <Text
						text="{path:'aModelVuelos>Fecha',type: 'sap.ui.model.type.Date',
                            formatOptions:{
                                pattern:'dd/MM/yyyy',UTC: true
                            }}" 
                        />
					<Text
						text="{aModelVuelos>Aerolinea}" />
					<Text
						text="{aModelVuelos>Destino}" />
                        <Text
						text="{aModelVuelos>Salida}" />
                        <Text
						text="{aModelVuelos>EstadoVuelo}" />
					<HBox  alignContent="Center">
						<Button icon="sap-icon://delete" press="onHandleDelete"></Button>
						<Button icon="sap-icon://edit" press="onHandleUpdate"></Button>
					</HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </Page>
</mvc:View>
